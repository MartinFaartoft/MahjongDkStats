                    <td class="right extra">1023</td>
                    <td class="right">89</td>
                    <td class="right extra">160</td>
                </tr>
            </tbody>
        </table>
    </section>
    <footer>
            <div>
                <a href="#top">To top</a>
            </div>
            <div>
                <a href="about.html">About</a>
            </div>
            <div>
                ©2024 Mahjong Danmark 
            </div>
    </footer>
</body>
</html>

@code {
    [Parameter]
    public StatisticsResult Stats { get; set; } = null!;

    [Parameter]
    public DateOnly NewestGameDate { get; set; }
}